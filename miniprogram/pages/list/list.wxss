.container { padding: 32rpx; }
.header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  position: relative;
}
.back-btn {
  position: absolute;
  left: 0;
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  z-index: 1;
}
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  flex: 1;
}
.tabs { display: flex; justify-content: space-around; margin: 32rpx 0; }
.tab { font-size: 32rpx; padding: 16rpx 0; border-bottom: 4rpx solid transparent; }
.tab-active { border-bottom: 4rpx solid #2ea7ff; }
.search-bar { margin: 0 32rpx 32rpx 32rpx; }
.search-input { width: 100%; border: 1rpx solid #eee; border-radius: 16rpx; padding: 16rpx; }
.empty { text-align: center; margin-top: 120rpx; }
.empty-img { width: 120rpx; height: 120rpx; margin-bottom: 24rpx; }
.empty-text { font-size: 32rpx; color: #888; }
.empty-desc { font-size: 24rpx; color: #bbb; }
