.container { padding: 32rpx; }
.header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  position: relative;
}
.back-btn {
  position: absolute;
  left: 0;
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  z-index: 1;
}
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  flex: 1;
}
.user-info { text-align: center; margin: 48rpx 0 32rpx 0; }
.avatar { width: 120rpx; height: 120rpx; border-radius: 50%; margin-bottom: 16rpx; }
.nickname { font-size: 36rpx; font-weight: 600; }
.id { font-size: 24rpx; color: #888; margin-bottom: 16rpx; }
.score-row { display: flex; justify-content: space-around; margin-bottom: 32rpx; }
.menu-list { background: #fff; border-radius: 16rpx; margin: 0 32rpx; }
.menu-item { padding: 32rpx; border-bottom: 1rpx solid #eee; font-size: 32rpx; }
.menu-item:last-child { border-bottom: none; }
.version { text-align: center; color: #bbb; margin: 48rpx 0 0 0; }
