.container { padding: 32rpx; }
.header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  position: relative;
}
.back-btn {
  position: absolute;
  left: 0;
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  z-index: 1;
}
.title { 
  font-size: 40rpx; 
  font-weight: bold; 
  text-align: center; 
  flex: 1;
}
.grid { display: flex; flex-wrap: wrap; justify-content: space-between; }
.grid-item {
  width: 45%; margin-bottom: 32rpx; border-radius: 20rpx; box-shadow: 0 4rpx 16rpx #eee;
  padding: 32rpx 0; color: #fff; text-align: center;
}
.icon { width: 60rpx; height: 60rpx; margin-bottom: 16rpx; }
.name { font-size: 32rpx; font-weight: 600; }
.desc { font-size: 24rpx; opacity: 0.8; }
